<Window x:Class="RandomLevelGeneratorDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RandomLevelGeneratorDemo"
        mc:Ignorable="d"
        Name="mainWindow"
        Title="Random Level Generation Demo" Height="450" Width="800" Loaded="OnLoad"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        >

    <Window.Resources>

        <ControlTemplate TargetType="Slider" x:Key="CustomSlider">
            <StackPanel>
                <TextBox HorizontalAlignment="Center" VerticalAlignment="Center" Width="40" Text="{Binding RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay, Path=Value}"/>
                <Grid>
                    <Label HorizontalAlignment="Left" VerticalAlignment="Center" Content="{TemplateBinding Minimum}"/>
                    <Slider IsSnapToTickEnabled="True" Margin="25, 0, 25, 0" HorizontalAlignment="Stretch" VerticalAlignment="Center" Value="{Binding RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay, Path=Value}" Minimum="{TemplateBinding Minimum}" Maximum="{TemplateBinding Maximum}"/>
                    <Label HorizontalAlignment="Right" VerticalAlignment="Center" Content="{TemplateBinding Maximum}"/>
                </Grid>
            </StackPanel>
        </ControlTemplate>

        <ControlTemplate TargetType="Slider" x:Key="ParameterSlider">
            <Border Margin="4" BorderThickness="1" BorderBrush="Black">
                <StackPanel>
                    <Label Content="{TemplateBinding Tag}" HorizontalAlignment="Center"/>
                    <Slider Template="{StaticResource CustomSlider}" Minimum="{TemplateBinding Minimum}" Maximum="{TemplateBinding Maximum}" Value="{Binding RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay, Path=Value}"/>
                </StackPanel>
            </Border>
        </ControlTemplate>

    </Window.Resources>

    <Grid Background="Black">
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <local:LevelViewer x:Name="Viewer" Focusable="True"/>
        <Border BorderThickness="1" Margin="4" BorderBrush="Black">
            <Grid Width ="200" HorizontalAlignment="Left" VerticalAlignment="Center" Background="White" Margin="40,0">
                <StackPanel Orientation="Vertical">
                    <Label Content="Parameters" HorizontalAlignment="Center"/>
                    <StackPanel>
                        <Slider Name="LevelWidthSlider" Template="{StaticResource ParameterSlider}" Tag="Level Width" Value="{Binding ElementName=mainWindow, Mode=TwoWay, Path=LevelWidth}" Minimum="0" Maximum="50"/>
                        <Slider Name="LevelHeightSlider" Template="{StaticResource ParameterSlider}" Tag="Level Height" Value="{Binding ElementName=mainWindow, Mode=TwoWay, Path=LevelHeight}" Minimum="0" Maximum="50"/>
                        <Slider Name="NumRoomsSlider" Template="{StaticResource ParameterSlider}" Tag="Number of Rooms" Value="{Binding ElementName=mainWindow, Mode=TwoWay, Path=NumRooms}" Minimum="0" Maximum="25"/>

                        <Border Margin="4" BorderThickness="1" BorderBrush="Black">
                            <StackPanel>
                                <Label Content="Seed" HorizontalAlignment="Center"/>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                    <Label Content="Mode: "/>
                                    <ComboBox HorizontalAlignment="Left" Width="75">
                                        <ComboBoxItem Content="Auto" IsSelected="True" Selected="AutoSeedingSelected"/>
                                        <ComboBoxItem Content="Manual" Selected="ManualSeedingSelected"/>
                                    </ComboBox>
                                </StackPanel>
                                <Grid>
                                    <TextBox Name="SeedTextBox" IsReadOnly="True" TextChanged="SeedTextBox_TextChanged" Margin="10"/>
                                </Grid>
                            </StackPanel>
                        </Border>
                        <Border Margin="4" BorderThickness="1" BorderBrush="Black">
                            <StackPanel>
                                <Label Content="Method" HorizontalAlignment="Center"/>
                                <ComboBox Margin="4">
                                    <ComboBoxItem Content="Steiner Tree"/>
                                    <ComboBoxItem Content="Random Spanning Tree"/>
                                </ComboBox>
                            </StackPanel>
                        </Border>

                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <Button Grid.Row="0" Name="GenerateButton" Content="Generate" Height="40" Width="150" HorizontalAlignment="Center" VerticalAlignment="Bottom" Click="GenerateButton_Click" Margin="40"/>
        <Label Grid.Row="0" Name="StatusLabel" Content="Status" Foreground="White" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="40" FontSize="25"/>
    </Grid>
</Window>
