<Window x:Class="RandomLevelGeneratorDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RandomLevelGeneratorDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="OnLoad">
    <Canvas Background="Black">
        <local:LevelViewer x:Name="Viewer" Focusable="True"/>
        <StackPanel Margin="20">
            <Button Content="Generate" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="150" Height="25"/>
        </StackPanel>
    </Canvas>
</Window>
